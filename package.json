{
	"name": "task-tracker-cli",
	"version": "1.0.0",
	"description": "A simple CLI task tracker built with TypeScript",
	"main": "dist/main.js",
	"bin": {
		"task-tracker": "dist/main.js"
	},
	"scripts": {
		"build": "tsc",
		"start": "node dist/main.js",
		"dev": "ts-node main.ts",
		"watch": "tsc --watch",
		"format": "prettier --write .",
		"format:check": "prettier --check ."
	},
	"keywords": [
		"cli",
		"task-tracker",
		"typescript"
	],
	"author": "",
	"license": "MIT",
	"dependencies": {
		"commander": "^11.1.0"
	},
	"devDependencies": {
		"@types/node": "^20.10.0",
		"typescript": "^5.3.0",
		"ts-node": "^10.9.0",
		"prettier": "^3.1.0"
	}
}
